generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id            String    @id @default(cuid()) @map("_id")
  name          String?
  email         String?   @unique
  emailVerified DateTime? @map("email_verified")
  password      String?
  image         String?
  role          String    @default("user")
}

model Home {
  id            String    @id @default(cuid()) @map("_id")
  imageUrl      String
  label         String
  description   String
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
}

model About {
  id            String    @id @default(cuid()) @map("_id")
  imageUrl      String
  description   String
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
}

model Categories {
  id            String    @id @default(cuid()) @map("_id")
  name          String
  products      Product[] @relation("CategoryToProduct")
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
}

model Product {
  id           String      @id @default(cuid()) @map("_id")
  categoryId   String   
  category     Categories  @relation("CategoryToProduct", fields: [categoryId], references: [id])
  name         String
  price        Float
  imageUrl     String
  createdAt    DateTime    @default(now())
  updatedAt    DateTime    @updatedAt

  @@index([categoryId])
}

model Order {
  id            String    @id @default(cuid()) @map("_id")
  name          String
  number        String   
  message       String
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
}

model Notification {
    id            String    @id @default(cuid()) @map("_id")
    title         String
    message       String
    status        String    @default("unread")
    orderId       String
    createdAt     DateTime  @default(now())
    updatedAt     DateTime  @updatedAt
}

